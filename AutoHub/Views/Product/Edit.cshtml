@using AutoHub.Infrastructure.DTOs
@model ProductDto

<h2>Edit Product</h2>

<form asp-action="Edit" method="post">
    <div>
        <label for="Product Name">Product Name</label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div>
        <label for="Manufacturer">Manufacturer</label>
        <input asp-for="Manufacturer" class="form-control" />
        <span asp-validation-for="Manufacturer" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="CategoryId"></label>
        @Html.DropDownListFor(model => model.CategoryId,
                 new SelectList(Model.Categories, "Id", "Name", Model.CategoryId),
                 "Select Category", new { @class = "form-control" })

        <span asp-validation-for="CategoryId"></span>
    </div>
    <div>
        <label for="CarsApplication">CarsApplication</label>
        <input asp-for="CarsApplication" class="form-control" />
        <span asp-validation-for="CarsApplication" class="text-danger"></span>
    </div>
    <div>
        <label for="Description">Description</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div>
        <label for="Price">Price</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div>
        <label for="ImageUrl">ImageUrl</label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <div>
        <label for="AddedOn">AddedOn</label>
        <input asp-for="AddedOn" class="form-control" />
        <span asp-validation-for="AddedOn" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save Changes</button>
</form>

<a asp-action="Index">Back to Products</a>

@using AutoHub.Data.Models
@model Product

<div class="container mt-4">

    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card border-0">
                <img src="@Model.ImageUrl" alt="@Model.ProductName" class="img-fluid" style="max-width: 60%; height: min-content;">
            </div>
        </div>
    </div>


    <div class="row justify-content-center mt-3">
        <div class="col-md-8">
            <div class="card p-5">
                <h2 class="text-center">@Model.ProductName</h2>

                <p><strong>Manufacturer:</strong> @Model.Manufacturer</p>
                <p><strong>Category:</strong> @Model.Category.Name</p>
                <p><strong>Price:</strong> @Model.Price BGN</p>
                <p><strong>Description:</strong> @Model.Description</p>
                <p><strong>Seller:</strong> @Model.Seller.UserName</p>
            </div>
        </div>
    </div>
</div>

<a asp-action="Index" class="btn btn-primary">Back to All Products</a>

@using AutoHub.Web.ViewModels.Models
@model HydraulicSystemViewModel

<h2>Add a New HydraulicSystem part</h2>

<form asp-action="Create" method="post">
    <div>
        <label for="Name">Part Name</label>
        <input asp-for="partName" class="form-control" />
        <span asp-validation-for="partName" class="text-danger"></span>
    </div>
    <div>
        <label for="Description">Description</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div>
        <label for="ImageUrl">ImageUrl</label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Create Hydraulic part</button>
</form>

<a asp-action="Index">Back to HydraulicSystem parts List</a>

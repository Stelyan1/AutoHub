@using AutoHub.Web.ViewModels.Models
@model HydraulicSystemViewModel

<h2>Edit HydraulicSystem part</h2>

<form asp-action="Edit" method="post">
    <div>
        <input type="hidden" asp-for="Id" />
    </div>
    <div>
        <label for="Part Name">Part Name</label>
        <input asp-for="partName" class="form-control" />
        <span asp-validation-for="partName" class="text-danger"></span>
    </div>
    <div>
        <label for="Description">Description</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div>
        <label for="ImageUrl">ImageUrl</label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save Changes</button>
</form>

<a asp-action="Index">Back to HydraulicSystem parts</a>

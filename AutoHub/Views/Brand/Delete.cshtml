@using AutoHub.Infrastructure.DTOs
@model BrandDto



<h2>Delete Brand</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.Name</h3>
                <p class="text-danger mt-3">Are you sure you want to delete @(Model.Name)?</p>
                <p class="text-danger mt-3">This will delete all models related to the brand!</p>
            </div>
            <div class="card-footer">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Name" />
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                    <a asp-controller="Brand" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-primary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@using AutoHub.Data.Models
@model Brand

<h2>Add a New Brand</h2>

<form asp-action="Create" method="post">
    <div>
        <label for="Name">Brand Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label for="Founded by">Founded By</label>
        <input asp-for="FoundedBy" class="form-control" />
        <span asp-validation-for="FoundedBy"></span>
    </div>
    <div>
        <label for="FoundedDate">FoundedDate</label>
        <input asp-for="FoundedDate" type="date" class="form-control" />
        <span asp-validation-for="FoundedDate"></span>
    </div>
    <div>
        <label for="Description">Description</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description"></span>
    </div>
    <div>
        <label for="ImageUrl">ImageUrl</label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Create Brand</button>
</form>

<a asp-action="Index">Back to Brands List</a>

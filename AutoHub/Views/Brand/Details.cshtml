@using AutoHub.Data.Models
@model Brand

<h2>@Model.Name</h2>

<p><strong>FoundedBy:</strong> @Model.FoundedBy</p>
<p><strong>Founded Date:</strong> @Model.FoundedDate.ToString("MM-dd-yyyy")</p>
<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Brand Image:</strong></p>
<img src="@Model.ImageUrl" alt="Brand Image" style="max-width: 100%; height: auto;" />

<a asp-action="Index" class="btn btn-primary">Back to All Brands</a>


@using AutoHub.Data.Models
@model Brand

<h2>@Model.Name</h2>

<p><strong>FoundedBy:</strong> @Model.FoundedBy</p>
<p><strong>Founded Date:</strong> @Model.FoundedDate.ToString("MM-dd-yyyy")</p>
<p><strong>Description:</strong> @Model.Description</p>
<p><strong></strong></p>
<img src="@Model.ImageUrl" alt="Brand Logo" style="width: 450px; height: 400px; object-fit: contain; border: hidden 1px solid #ccc; padding: 5px;" />

<a asp-action="Index" class="btn btn-primary">Back to All Brands</a>

